{% extends "layout.jinja2" %}
{% block content %}
<h1>Edit Entry</h1>
    <form method="POST">
      <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
      <table>
        <tr>
          <td><label for = "title"> Post Title </label><td>
          <td><input type = "text" name = "title" value="{{ title }}"/></td>
        </tr>
        <tr>
          <td><label for = "date"> Created On </label><td>
          <td><input type = "date" name = "date" format="mm/dd/yyyy" value = "10/29/17"/></td>
        </tr>
        <tr>
          <td><label for = "body"> Write Post Here </label><td>
          <td><textarea name = "body">{{ body }}</textarea></td>
          <input type = "submit" value = "update entry"/>
        </tr>
      </table>
    </form>
{% endblock %}